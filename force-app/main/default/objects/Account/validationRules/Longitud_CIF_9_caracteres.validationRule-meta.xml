<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Longitud_CIF_9_caracteres</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISBLANK(CIF__c)),
LEN( CIF__c )  &lt;&gt; 9
)</errorConditionFormula>
    <errorMessage>Debe introducir un CIF de longitud 9.</errorMessage>
</ValidationRule>
